NAME = logger
OBJ = $(NAME).o log_file.o errors.o
LIBS = -ldaqhats -lgtkdatabox -pthread `pkg-config --libs gtk+-3.0` -lm -lbcm_host
CFLAGS = `pkg-config --cflags gtk+-3.0` -L/opt/vc/lib

CC = gcc

EXTENSION = .c

%.o: %$(EXTENSION) $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

#Cleanup
.PHONY: clean

clean:
	rm -f *.o *~ core $(NAME)
